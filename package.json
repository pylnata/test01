{
  "name": "test01",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.19",
    "express": "^4",
    "hdb": "^0.19.0",
    "latest-version": "^6.0.0"
  },
  "devDependencies": {
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
    "@sap/ux-specification": "^1.100.3",
    "@sapui5/ts-types": "^1.92.2",
    "eslint": "^7.32.0",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch-environments": "cds watch --open environments/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4",
    "watch-allocations": "cds watch --open allocations/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4",
    "watch-functions": "cds watch --open functions/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4",
    "watch-modeltables": "cds watch --open modeltables/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4",
    "watch-calculationunits": "cds watch --open calculationunits/webapp/index.html?sap-ui-xx-viewCache=false#fe-lrop-v4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic-auth",
        "users": {
          "alice": {
            "roles": [
              "admin"
            ]
          },
          "bob": {
            "roles": [
              "Modeler",
              "builder"
            ]
          },
          "*": false
        }
      },
      "messaging": {
        "[development]": {
          "kind": "file-based-messaging",
          "format": "cloudevents"
        },
        "[xxxhybrid]": {
          "kind": "enterprise-messaging-shared",
          "format": "cloudevents"
        },
        "[production]": {
          "kind": "enterprise-messaging",
          "format": "cloudevents"
        }
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": ":memory:"
        },
        "[test-hana]": {
          "kind": "hana-cloud"
        }
      }
    },
    "cdsc": {
      "docs": true,
      "variableReplacements": {
        "$session": {
          "environment_ID": "1",
          "function_ID": "4"
        }
      }
    },
    "hana": {
      "journal": {
        "enable-drop": false,
        "change-mode": "alter"
      },
      "deploy-format": "hdbtable"
    },
    "features": {
      "assert_integrity": "db",
      "xxxkibana_formatter": true
    }
  },
  "sapux": [
    "app/environments",
    "app/allocations",
    "app/environments",
    "app/functions",
    "app/modeltables",
    "app/calculationunits"
  ]
}
